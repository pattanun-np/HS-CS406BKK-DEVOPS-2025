pipeline {
    agent any

    parameters {
        booleanParam(name: 'DEPLOY_NODE', defaultValue: false, description: 'Deploy as Node.js process')
        booleanParam(name: 'DEPLOY_DOCKER', defaultValue: false, description: 'Deploy to Docker')
        booleanParam(name: 'DEPLOY_K8S', defaultValue: false, description: 'Deploy to Kubernetes')
    }

    environment {
        APP_DIR = 'exam/node-app'
        TTL = '2h'
        APP_PORT = '4444'
        APP_NAME = 'node-app'
        CONTAINER_NAME = 'node-app'
        TARGET_HOST = 'target'
        DOCKER_VM_HOST = 'docker'
        K8S_SERVER = 'https://k8s-master:6443'
        K8S_NAMESPACE = 'default'
        TARGET_SSH_CREDENTIALS_ID = 'target-vm-ssh'
        DOCKER_SSH_CREDENTIALS_ID = 'docker-vm-ssh'
        K8S_CREDENTIALS_ID = 'k8s-token'
        NODE_VERSION = '24'
    }

    stages {
        stage('Setup Node.js') {
            steps {
                sh '''
export NVM_DIR="$HOME/.nvm"
if [ ! -d "$NVM_DIR" ]; then
    curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.40.1/install.sh | bash
fi
. "$NVM_DIR/nvm.sh"
nvm install $NODE_VERSION
nvm use $NODE_VERSION
echo "Node version: $(node --version)"
echo "NPM version: $(npm --version)"
'''
            }
        }

        stage('Install Dependencies') {
            steps {
                dir(env.APP_DIR) {
                    sh '''
export NVM_DIR="$HOME/.nvm"
. "$NVM_DIR/nvm.sh"
nvm use $NODE_VERSION
npm install
'''
                }
            }
        }

        stage('Run Tests') {
            steps {
                dir(env.APP_DIR) {
                    sh '''
export NVM_DIR="$HOME/.nvm"
. "$NVM_DIR/nvm.sh"
nvm use $NODE_VERSION
npm test
'''
                }
            }
        }

        stage('Build & Push Docker Image') {
            when {
                expression { params.DEPLOY_DOCKER || params.DEPLOY_K8S }
            }
            steps {
                script {
                    def uuid = sh(
                        returnStdout: true,
                        script: 'uuidgen 2>/dev/null || cat /proc/sys/kernel/random/uuid'
                    ).trim().toLowerCase()

                    env.TTL_IMAGE = "ttl.sh/${uuid}:${env.TTL}"
                }

                dir(env.APP_DIR) {
                    sh "docker build -t ${env.TTL_IMAGE} ."
                    sh "docker push ${env.TTL_IMAGE}"
                }

                echo "ttl.sh image: ${env.TTL_IMAGE}"
            }
        }

        stage('Parallel Deploy') {
            parallel {
                stage('Deploy as Node Process') {
                    when {
                        expression { params.DEPLOY_NODE }
                    }
                    steps {
                        withCredentials([sshUserPrivateKey(
                            credentialsId: env.TARGET_SSH_CREDENTIALS_ID,
                            keyFileVariable: 'SSH_KEY',
                            usernameVariable: 'SSH_USER'
                        )]) {
                            dir(env.APP_DIR) {
                                sh '''
ssh -i "$SSH_KEY" -o StrictHostKeyChecking=no "$SSH_USER@$TARGET_HOST" "mkdir -p ~/app"
scp -i "$SSH_KEY" -o StrictHostKeyChecking=no package.json index.js "$SSH_USER@$TARGET_HOST:~/app/"
'''
                            }

                            sh '''
ssh -i "$SSH_KEY" -o StrictHostKeyChecking=no "$SSH_USER@$TARGET_HOST" 'bash -s' <<'EOF'
set -euxo pipefail
cd ~/app

export NVM_DIR="$HOME/.nvm"
if [ ! -d "$NVM_DIR" ]; then
    curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.40.1/install.sh | bash
fi
. "$NVM_DIR/nvm.sh"
nvm install 24
nvm use 24

npm install --production
pkill -f "node index.js" || true
nohup node index.js > app.log 2>&1 &
sleep 2
pgrep -f "node index.js" && echo "Process is running"
EOF
'''
                        }
                    }
                }

                stage('Deploy to Docker') {
                    when {
                        expression { params.DEPLOY_DOCKER }
                    }
                    steps {
                        withCredentials([sshUserPrivateKey(
                            credentialsId: env.DOCKER_SSH_CREDENTIALS_ID,
                            keyFileVariable: 'SSH_KEY',
                            usernameVariable: 'SSH_USER'
                        )]) {
                            sh """
ssh -i "\$SSH_KEY" -o StrictHostKeyChecking=no "\$SSH_USER@${env.DOCKER_VM_HOST}" 'bash -s' <<EOF
set -euxo pipefail

docker pull ${env.TTL_IMAGE}
docker rm -f ${env.CONTAINER_NAME} 2>/dev/null || true

docker run -d \\
  --name ${env.CONTAINER_NAME} \\
  --restart unless-stopped \\
  -p ${env.APP_PORT}:${env.APP_PORT} \\
  ${env.TTL_IMAGE}

docker ps --filter "name=${env.CONTAINER_NAME}"
EOF
"""
                        }
                    }
                }

                stage('Deploy to Kubernetes') {
                    when {
                        expression { params.DEPLOY_K8S }
                    }
                    steps {
                        withCredentials([string(credentialsId: env.K8S_CREDENTIALS_ID, variable: 'K8S_TOKEN')]) {
                            dir(env.APP_DIR) {
                                sh """
sed -i "s|IMAGE_PLACEHOLDER|${env.TTL_IMAGE}|g" k8s/deployment.yaml

kubectl --server=${env.K8S_SERVER} --token="\$K8S_TOKEN" --insecure-skip-tls-verify=true \\
  apply -f k8s/deployment.yaml -n ${env.K8S_NAMESPACE}

kubectl --server=${env.K8S_SERVER} --token="\$K8S_TOKEN" --insecure-skip-tls-verify=true \\
  apply -f k8s/service.yaml -n ${env.K8S_NAMESPACE}

kubectl --server=${env.K8S_SERVER} --token="\$K8S_TOKEN" --insecure-skip-tls-verify=true \\
  rollout status deployment/${env.APP_NAME} -n ${env.K8S_NAMESPACE} --timeout=120s

kubectl --server=${env.K8S_SERVER} --token="\$K8S_TOKEN" --insecure-skip-tls-verify=true \\
  get pods -n ${env.K8S_NAMESPACE} -l app=${env.APP_NAME}

kubectl --server=${env.K8S_SERVER} --token="\$K8S_TOKEN" --insecure-skip-tls-verify=true \\
  get svc -n ${env.K8S_NAMESPACE} -l app=${env.APP_NAME}
"""
                            }
                        }
                    }
                }
            }
        }
    }

    post {
        always {
            echo "Pipeline completed."
            echo "Deploy Node: ${params.DEPLOY_NODE}, Deploy Docker: ${params.DEPLOY_DOCKER}, Deploy K8S: ${params.DEPLOY_K8S}"
            script {
                if (env.TTL_IMAGE) {
                    echo "Image: ${env.TTL_IMAGE}"
                }
            }
        }
        success {
            echo 'Deployment successful!'
        }
        failure {
            echo 'Deployment failed!'
        }
    }
}
